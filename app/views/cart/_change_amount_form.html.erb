<%= form_with url: update_products_to_cart_path(product), method: :patch do |f| %>
  <%= f.number_field :amount, class: "input-field w-24 h-9 inline-block", value:session.dig(:products, product.id.to_s), min: 1 %>
  <%= f.submit "Change amount", class:"text-white font-medium rounded-lg px-5 py-2.5 bg-blue-700 hover:bg-blue-800 text-sm" %>
<% end %>
