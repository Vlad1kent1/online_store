<%= form_with url: update_products_to_cart_path(product), method: :patch do |form| %>
  <%= form.hidden_field :update_action, value: 'change' %>
  <%= form.number_field :amount, class:'input-field w-[100px] h-[37px] inline-block', value:session.dig(:products, product.id.to_s) %>
  <%= form.submit "Change amount", class:"text-white font-medium rounded-lg px-5 py-2.5 bg-blue-700 hover:bg-blue-800 text-sm" %>
<% end %>
