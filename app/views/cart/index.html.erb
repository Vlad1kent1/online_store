<div class="flex flex-col">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
      <div class="overflow-hidden">
        <% if session[:products].present? %>
          <table class="min-w-full mx-4 text-sm font-light text-left">
            <thead class="font-medium border-b dark:border-neutral-500">
              <tr>
                <th scope="col" class="px-6 py-4">Name</th>
                <th scope="col" class="px-6 py-4">Price</th>
                <th scope="col" class="px-6 py-4">Amount</th>
                <th scope="col" class="px-6 py-4">Sum</th>
              </tr>
            </thead>
              <tbody>
                <% @cart.items.each do |product| %>
                  <tr class="border-b hover:bg-neutral-100 dark:border-neutral-500 dark:hover:bg-neutral-600">
                    <td class="px-6 py-4 whitespace-nowrap"><%= product.name %></td>
                    <td class="px-6 py-4 whitespace-nowrap"><%= number_to_currency(product.price, unit:"₴") %></td>
                    <td class="px-6 py-4 whitespace-nowrap"><%= render "cart/change_amount_form", product: product %></td>
                    <td class="px-6 py-4 whitespace-nowrap"><%= number_to_currency(@cart.product_sum(product), unit: "₴") %></td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= button_to remove_products_to_cart_path(product), method: :patch do %>
                          <%= image_tag "trash.svg", size: "30x30" %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
                <tr class="border-b dark:border-neutral-500">
                  <td colspan="3" class="px-6 py-2 font-bold whitespace-nowrap">
                    Total sum
                  </td>
                  <td class="px-6 py-2 font-bold whitespace-nowrap"><%= number_to_currency(@cart.sum, unit: "₴") %></td>
                </tr>
              </tbody>
          </table>

          <div>
            <div class="inline-block m-5">
                <%= link_to 'Pay this order', new_order_path, class: "text-white bg-purple-500 font-bold rounded-lg px-5 py-2.5 ml-4 bg-amber-600 hover:bg-amber-700 text-base" %>
            </div>

            <div class="inline-block float-right m-5">
              <%= button_to 'Delete all products', cart_path(@cart), method: :delete, class: "text-white bg-gray-500 font-medium rounded-lg px-5 py-2.5 text-sm" %>
            </div>
          </div>
        <% else %>
            <div class="grid h-screen text-3xl place-items-center">Your cart is empty</div>
        <% end %>
      </div>
    </div>
  </div>
</div>
