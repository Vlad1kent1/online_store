<%= form_with(model: product, class: "contents") do |f| %>
  <div class="my-5">
    <%= f.label :name %>
    <%= f.text_field :name, class: "block shadow rounded-md…" %>
  </div>

  <div class="my-5">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 10, class: "block shadow…" %>
  </div>
  
  <div class="my-5">
    <%= f.label :price %>
    <%= f.text_field :price, class: "block shadow rounded-md…" %>
  </div>

  <div class="my-5">
    <%= f.label :balance %>
    <%= f.text_field :balance, class: "block shadow rounded-md…" %>
  </div>
  
  <div class="inline">
    <%= f.submit class: "text-white bg-teal-400 font-medium rounded-lg px-5 py-2.5 text-sm" %>
  </div>
<% end %>
